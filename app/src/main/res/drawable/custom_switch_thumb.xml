<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/whiteColor" />
            <stroke android:color="@color/light_grey"
                android:width="@dimen/_3sdp"/>
            <size android:width="@dimen/_17sdp" android:height="@dimen/_17sdp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/whiteColor" />
            <stroke android:width="@dimen/_3sdp" android:color="@color/colorPrimary" />
            <size android:width="@dimen/_17sdp" android:height="@dimen/_17sdp" />
        </shape>
    </item>
</selector>